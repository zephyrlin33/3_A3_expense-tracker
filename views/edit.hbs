



<div class="container">
  <h1 class="my-1 text-center">修改支出 {{expense.name}}</h1>
  <form action="/expense/{{expense._id}}?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="name" class="form-label">名稱<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="交通費"
        name="name"
        value="{{expense.name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">日期<span class="text-danger">*</span></label>
      <input
        type="date"
        class="form-control"
        id="date"
        placeholder="date"
        name="date"
        value="{{expense.date}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別<span class="text-danger">*</span></label>
      
      <select id="category" name="categoryId" class="form-select">
        <option selected disabled value="">選擇類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="number" class="form-label">金額<span class="text-danger">*</span></label>
      <input
        type="text"
        class="form-control"
        id="number"
        placeholder="100"
        name="number"
        value="{{expense.number}}"
        required
      />
    </div>
    
    <div class="text-center">
      
      <button type="submit" class="btn btn-primary">
        儲存修改
      </button>
      <a href="/">
        <button type="button" class="btn btn-outline-secondary">
          返回首頁
        </button>
      </a>
      
    </div>
  </form>
</div>